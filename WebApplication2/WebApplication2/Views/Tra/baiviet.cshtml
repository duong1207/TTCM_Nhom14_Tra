<script>
    function Getbv() {
        // Lấy mã sản phẩm từ tham số trong URL
        var urlParams = new URLSearchParams(window.location.search);
        var productId = urlParams.get('id');

        // Gọi API để lấy thông tin chi tiết của sản phẩm đó
        $.ajax({
            url: 'https://localhost:44336/api/Tintuc/chitiettt/' + productId, // sửa lại đường dẫn để gọi dữ liệu từ tblKhach
            method: 'GET',
            contentType: 'json',
            dataType: 'json',
            error: function (reponse) {
                alert("loi");
            },
            success: function (response) {
                const product = response[0];

                $('#ten').text(product.Tieude);
                $('#gt').text(product.Gioithieu);

            }

        });
    }

    $(document).ready(function () {
        Getbv();
    });
</script>