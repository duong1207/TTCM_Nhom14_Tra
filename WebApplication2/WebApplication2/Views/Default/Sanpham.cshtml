                    url: 'https://localhost:44336/api/sanpham/' + maDL, // Đường dẫn tới API xóa đại lý với mã tương ứng
                    type: 'DELETE',
                    success: function (result) {
                        alert('Xóa sách thành công!');
                        GetAllSanpham();
